---
import { jobtimeline } from "../../../const/const";
---

<section class="section_experience">
  <div class="linear-grandient-1"></div>
  <div class="content_experience">
    <h3 class="title-experience" id="experience">Experiencia</h3>
    <ul class="ul-experience">
      {
        jobtimeline.map(({ date, title, corporation, url }) => (
          <li class="li-experience">
            <span class="circle" />
            <div>
              <h3 class="experience-node">{title}</h3>
              <p><a target="_blank" href={url}>{corporation}</a></p>
              <span>{date}</span>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  a {
    color: inherit;
  }
  .section_experience {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    background-color: #111111;
    justify-content: center;
    align-items: center;
  }
  .linear-grandient-1 {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    /* background: radial-gradient(at left center, rgba(1, 70, 190, 0.5), transparent , transparent); */
    background: linear-gradient(to top, rgba(1, 70, 190, 0.5), #000);
    background: ;
    z-index: 0;
  }
  .content_experience {
    position: relative;
    z-index: 1;
    width: 90%;
    height: 100%;
    margin: 0 auto;
    padding: 20px 0;
    max-width: 1355px;
  }
  .title-experience {
    font-size: 27px;
    color: #f6f6f9;
    text-align: left;
    width: 100%;
    font-weight: 800;
    scroll-margin-top: 80px;
    padding: 20px 0;
  }
  .experience-node {
    font-size: 20px;
  }
  .ul-experience {
    padding: 30px 10px;
    display: flex;
    flex-direction: row;
    /* width: 50%; */
  }
  .li-experience {
    padding: 0px 20px;
    color: #f6f6f9;
    border-left: 1px solid #f6f6f9;
    list-style: none;
    position: relative;
    padding-bottom: 50px;
  }
  .circle {
    position: absolute;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    left: -5px;
    top: 5px;
    background-color: #f6f6f9;
  }
  .li-experience h3 {
    padding-bottom: 5px;
    font-weight: 200;
  }
  .li-experience p {
    padding: 5px 0;
  }
  .li-experience span {
    font-size: 13px;
  }
</style>
